{
  "description": ["Defaults for Python projects"],
  "extends": [
    "github>ryankanno/renovate-config",
    ":enablePreCommit"
  ],
  "enabledManagers": [
    "poetry"
  ],
  "packageRules": [
    {
      "managers": [
        "poetry"
      ],
      "semanticCommitType": "chore",
      "groupName": "py-dev-deps",
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "packagePatterns": [
        "black",
        "^flake8",
        "hypothesis",
        "isort",
        "konch",
        "mypy",
        "pdbpp",
        "pre-commit",
        "pycodestyle",
        "pyflakes",
        "^pytest",
        "tox",
        "vulture"
      ],
      "automerge": true,
      "labels": [
        "automerge",
        "dev-dependencies",
        "python"
      ]
    },
    {
      "managers": [
        "poetry"
      ],
      "semanticCommitType": "chore",
      "groupName": "py-deps",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
          "minor",
          "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "labels": [
        "automerge",
        "dependencies",
        "python"
      ]
    }
  ]
}
