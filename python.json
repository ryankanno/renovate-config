{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": ["Defaults for Python projects"],
  "extends": [
    "github>ryankanno/renovate-config",
    "github>ryankanno/renovate-config:schedule",
    ":semanticCommits",
    ":disableMajorUpdates"
  ],
  "poetry": {
    "enabled": true,
    "rangeStrategy": "update-lockfile"
  },
  "pre-commit": {
    "enabled": true,
    "groupName": "pre-commit"
  },
  "packageRules": [
    {
      "matchManagers": ["poetry"],
      "semanticCommitType": "build",
      "semanticCommitScope": "deps-dev",
      "groupName": "py-dev-deps",
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "packagePatterns": [
        "black",
        "^flake8",
        "hypothesis",
        "isort",
        "konch",
        "mypy",
        "pdbpp",
        "pre-commit",
        "pycodestyle",
        "pyflakes",
        "^pytest",
        "tox",
        "vulture"
      ],
      "automerge": true,
      "labels": [
        "automerge",
        "dev-dependencies",
        "python"
      ]
    },
    {
      "matchManagers": ["poetry"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps",
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
          "minor",
          "patch"
      ],
      "automerge": true,
      "labels": [
        "automerge",
        "dependencies",
        "python"
      ]
    },
    {
      "matchManagers": ["pre-commit"],
      "semanticCommitType": "build",
      "semanticCommitScope": "ci",
      "automerge": true,
      "labels": [
        "automerge",
        "pre-commit",
        "ci"
      ]
    }
  ]
}
